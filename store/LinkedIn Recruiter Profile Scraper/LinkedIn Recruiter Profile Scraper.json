{
	"slug": "linkedin-recruiter-profile-scraper",
	"description": "Collect valuable information you need from LinkedIn Recruiter profiles, including emails",
	"image": "https://s3-eu-west-1.amazonaws.com/phantombuster-static/api-store/Linkedin_profile_scrapper/lkd_prfl_scrppr.png",
	"hidden": false,
	"updated": false,
	"gradientBegin": "#4CA1AF",
	"gradientEnd": "#28485B",
	"argumentHelpAnchor": "#section_argument",
	"defaultArgument": {
		"sessionCookie": "your_session_cookie",
		"spreadsheetUrl": "linkedin_profile_urls",
		"numberOfProfilesPerLaunch": 10,
		"saveImg": false,
		"takeScreenshot": false
	},
	"outputDescription": {
		"profileUrl": "LinkedIn profile URL",
		"recruiterProfileUrl": "LinkedIn Recruiter profile URL",
		"name": "",
		"degree": "",
		"connectionCount": "",
		"title": "",
		"previousPositions": "",
		"education": "",
		"summary": "",
		"skills": "",
		"experience": "",
		"languages": ""
	},
	"defaultArgumentAllowed": false,
	"argumentForm": {
		"enabled": true,
		"alpaca": {
			"schema": {
				"properties": {
					"spreadsheetUrl": {
						"required": true
					}
				}
			},
			"options": {
				"fields": {
					"sessionCookie": {
						"label": "Session cookie <a href=\"/api-store/10786/linkedin-recruiter-profile-scraper#section_argument\" target=\"_blank\">(?)</a>",
						"placeholder": "Paste your session cookie here"
					},
					"spreadsheetUrl": {
						"type": "url",
						"helpers": [
							"Enter either a Google Spreadsheet URL or a CSV URL (make sure your file is publicly available)",
							"OR a LinkedIn Recruiter/regular profile URL",
							"<b>Please be gentle.</b> This API will manipulate LinkedIn on your behalf. Scraping 100+ profiles in a short period of time is not recommended."
						],
						"label": "Spreadsheet URL of profiles to scrape <a href=\"/api-store/10786/linkedin-recruiter-profile-scraper#section_5addagooglespreadsheet\" target=\"_blank\">(?)</a>"
					},
					"columnName": {
						"label": "Column name from which to get profile URLs",
						"placeholder": "LinkedIn Profile Link",
						"helper": "By default, we'll use the first column of your spreadsheet (column A)"
					},
					"hunterApiKey": {
						"label": "Email discovery: Hunter.io API key (optional) <a href=\"/api-store/10786/linkedin-recruiter-profile-scraper#section_email_discovery\" target=\"_blank\">(?)</a>",
						"helper": "Leave this field empty if you don't want to use Hunter.io"
					},
					"numberOfProfilesPerLaunch": {
						"label": "Number of profiles to visit per launch (25 max.) <a href=\"/api-store/10786/linkedin-recruiter-profile-scraper#section_repetition_setup\" target=\"_blank\">(?)</a>",
						"inputType": "number"
					},
					"csvName": {
                        "label": "Name of resulting CSV file",
                        "placeholder": "result"
					},
					"saveImg": {
						"rightLabel": "<b>Save the profile picture as a jpeg</b>"
					},
					"takeScreenshot": {
						"rightLabel": "<b>Take a screenshot of the profile</b>"
					}
				}
			}
		}
	},
	"argumentSchema": {
		"type": "object",
		"properties": {
			"sessionCookie": {
				"type": "string",
				"required": true,
				"minLength": 15
			},
			"spreadsheetUrl": {
				"type": "string"
			},
			"columnName": {
				"type": "string"
			},
			"hunterApiKey": {
				"type": "string",
				"maxLength": 50
			},
			"numberOfProfilesPerLaunch": {
				"type": "number",
				"minimum": 1,
				"maximum": 25
			},
			"csvName": {
				"type": "string",
				"required": false
			},
			"saveImg": {
				"type": "boolean"
			},
			"takeScreenshot": {
				"type": "boolean"
			}
		},
		"oneOf": [
			{
				"required": [
					"spreadsheetUrl"
				]
			},
			{
				"properties": {
					"profileUrls": {
						"required": true,
						"type": "array",
						"minItems": 1,
						"items": {
							"type": "string",
							"minLength": 1
						}
					}
				}
			},
			{
				"properties": {
					"profileUrls": {
						"required": true,
						"type": "string",
						"minLength": 1
					}
				}
			}
		]
	}
}
